<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">

	<action name="register" class="Register" method="register">
        <result name="success">/login.jsp</result>
        <result name="error">/error.jsp</result>
    </action>
    
    <action name = "hello">
    	<result>/hello.jsp</result>
    </action>
    
	<action name="login" class="Login" method="login">
 	   <result name="success" type="redirect">loginSuccess.jsp</result>
  	  <result name="error">/login.jsp</result>
	</action>
	
	<action name="profile" class="Profile" method="viewProfile">
    	<result name="success">/profile.jsp</result>
   	 	<result name="login">/login.jsp</result>
    	<result name="error">/error.jsp</result>
	</action>
	
	<action name="users" class="Users" method="viewAllUsers">
    	<result name="success">/users.jsp</result>
   	 	<result name="error">/error.jsp</result>
	</action>
	
	<action name="viewUser" class="ViewUser" method="viewUser">
    	<result name="success">/viewUser.jsp</result>
    	<result name="error">/error.jsp</result>
	</action>
		
	<action name="addItem" class="AddItem" method="addItem">
		<result name ="success">/loginSuccess.jsp</result>
		<result name ="login">/login.jsp</result>
		<result name="error">/error.jsp</result>
	</action>
	
	<action name="viewItems" class="ViewItems" method="viewItems">
		<result name="success">/items.jsp</result>
		<result name="error">/error.jsp</result>
	</action>
	
	<action name="makeBid" class="MakeBid" method="makeBid">
		<result name="success">/loginSuccess.jsp</result>
		<result name="login">/login.jsp</result>
    	<result name="error">/error.jsp</result>
	</action>
	
	<action name="myBids" class="MyBids" method="viewMyBids">
   		<result name="success">/myBids.jsp</result>
    	<result name="login">/login.jsp</result>
    	<result name="error">/error.jsp</result>
	</action>
	
	<action name="viewBidsForItem" class="ViewBidsForItem" method="viewBidsForItem">
		<result name="success">/viewBidsForItem.jsp</result>
		<result name="error">/error.jsp</result>
	</action>
	
	<action name="logout" class="Logout" method="execute">
		<result name="success">/login.jsp</result>
	</action>
	
    </package>
</struts>